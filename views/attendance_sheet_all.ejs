<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance Sheet</title>
    <link rel="stylesheet" href="/attendance_sheet_all.css">
</head>

<body>
    <h1>Attendance Sheet</h1>
    <table id="attendanceTable">
        <thead>
            <tr>
                <th>Names</th>
                <!-- Dates will be dynamically added here -->
            </tr>
        </thead>
        <tbody>
            <!-- Names will be dynamically added here -->
        </tbody>
    </table>
    <button class="add-date-btn" onclick="addDate()">Add Date</button>

    <script>

    const users = <%- JSON.stringify(users) -%>;
    const names = users.map(user => user.name);


    const table = document.getElementById("attendanceTable");
    const theadRow = table.querySelector("thead tr");
    const tbody = table.querySelector("tbody");

    // Initialize table with names and 10 dates
    function initializeTable() {
        // Add initial 10 dates to the header
        for (let i = 1; i <= 10; i++) {
            const th = document.createElement("th");
            th.textContent = `Date ${i}`;
            theadRow.appendChild(th);
        }

        // Add names to the first column and attendance cells
        names.forEach(name => {
            const tr = document.createElement("tr");

            const nameCell = document.createElement("td");
            nameCell.textContent = name;
            tr.appendChild(nameCell);

            // Add 10 attendance cells
            for (let i = 0; i < 10; i++) {
                const td = document.createElement("td");
                const checkbox = document.createElement("input");
                checkbox.type = "checkbox";
                td.appendChild(checkbox);
                tr.appendChild(td);
            }

            tbody.appendChild(tr);
        });
    }

    // Add a new date column
    function addDate() {
        const dateCount = theadRow.children.length;
        const newTh = document.createElement("th");
        newTh.textContent = `Date ${dateCount}`;
        theadRow.appendChild(newTh);

        // Add a new attendance cell for each person
        tbody.querySelectorAll("tr").forEach(row => {
            const newTd = document.createElement("td");
            const checkbox = document.createElement("input");
            checkbox.type = "checkbox";
            newTd.appendChild(checkbox);
            row.appendChild(newTd);
        });
    }

    // Initialize the table on page load
    initializeTable();
    </script>
</body>

</html>