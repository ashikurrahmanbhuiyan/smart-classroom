            <i data-lucide="file-text"></i><span class="ml-3">Assignment</span>
        </a>
        <a href="/resource_sharing?course_name=<%= course_name %>"
            class="flex items-center px-4 py-2 rounded-lg <%= page === 'resource_sharing' ? 'text-white bg-blue-600' : 'text-gray-600 hover:bg-gray-100' %>">
            <i data-lucide="calendar"></i><span class="ml-3">Resource</span>
        </a>
