<aside class="w-64 bg-white shadow-md flex flex-col">
    <div class="p-6 text-2xl font-bold text-blue-600 border-b">
        SmartClass
    </div>
    <nav class="flex-1 p-4 space-y-2">
        <a href="/teacher/dashboard"
            class="flex items-center px-4 py-2 rounded-lg <%= page === 'dashboard' ? 'text-white bg-blue-600' : 'text-gray-600 hover:bg-gray-100' %>">
            <i data-lucide="layout-dashboard"></i><span class="ml-3">Home</span>
        </a>
        <a href="/attendance_sheet/all?course_name=<%= course_name %>"
            class="flex items-center px-4 py-2 rounded-lg <%= page === 'attendance_sheet_all' ? 'text-white bg-blue-600' : 'text-gray-600 hover:bg-gray-100' %>">
