    <div class="p-4 border-t">
        <div class="flex items-center">
            <img src="https://placehold.co/40x40/93C5FD/1E40AF?text=ER" alt="Teacher Avatar" class="rounded-full">
            <div class="ml-3">
                <p class="text-sm font-semibold">
                    <%= "courseData.teacher" %>
                </p>
                <p class="text-xs text-gray-500">Teacher</p>
            </div>
        </div>
