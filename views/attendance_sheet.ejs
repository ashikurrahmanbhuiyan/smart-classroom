<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance Sheet</title>
    <link rel="stylesheet" href="/attendance_sheet.css">
</head>

<body>
    <div class="container">
        <h1>Attendance Sheet</h1>
        <!-- <form id="attendance-form">
            <input type="text" id="name" placeholder="Enter Name" required>
            <input type="text" id="id" placeholder="Enter ID" required>
            <button type="submit">Add Student</button>
        </form> -->

        <form id="attendance-form">
            <input type="date" id="date" placeholder="Enter Date" required>
            <button type="submit">Enter </button>
        </form>

        <table id="attendance-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Attendance</th>
                </tr>
            </thead>
            <tbody>
                <% if (users && users.length> 0) { %>
                    <% users.forEach(user=> { %>
                        <tr>
                            <td><%= user.email %></td>
                            <td><%= user.name %></td>
                            <td><button class="mark-attendance">Present</button></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                        <tr>
                            <td colspan="3">No users found.</td>
                        </tr>
                    <% } %>

            </tbody>
        </table>
    </div>

    <script >

        //Mark attendance functionality

        const tableBody = document.querySelector("#attendance-table tbody");

            tableBody.addEventListener("click", (e) => {
                if (e.target.classList.contains("mark-attendance")) {
                    e.target.textContent = e.target.textContent === "Present" ? "Absent" : "Present";
                    e.target.style.backgroundColor = e.target.textContent === "Present" ? "#28a745" : "#dc3545";
                }
            });
    </script>
</body>

</html>